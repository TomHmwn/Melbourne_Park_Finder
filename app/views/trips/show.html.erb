<input type="hidden" id="trip-timer" value="<%= @trip.timer.to_i %>">
<% zone = ActiveSupport::TimeZone.new("Melbourne") %>

<div class="m-5 text-center text-3xl"><strong>Time left on your park: </strong></div>
<div data-controller="timer" id="app" class ="flex justify-center items-center">
</div>
<div class="container mx-auto text-center mt-5 p-4 ">
<p><strong> Address: </strong> <%= @trip.parking_bay.address %> </p>
<p><strong> Bay Number: </strong> <%= @trip.parking_bay.id %> </p>
<p><strong> Parking from: </strong> <%= zone.at(@trip.created_at).strftime('%l:%M %p') %> - <%= (zone.at(@trip.created_at) + (@trip.timer * 60)).strftime('%l:%M %p') %> </p>
<p><strong> Duration: </strong> <%= @trip.timer %> minutes </p>
  <div class="text-center mt-5">
    <!-- link_to "Return to home", root_path, class:"px-4 py-2 font-semibold bg-cyan-500 text-white rounded-full mb-4" -->
    <%= link_to "Directions to your car", @parking_bay.directions_link, target:'_blank', class: 'px-4 py-2 font-semibold bg-cyan-500 text-white rounded-full' %>
  </div>
</div>

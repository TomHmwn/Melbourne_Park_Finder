<h1>Show page for <%= @parking_bay.address %></h1>
<p>for <%= @parking_bay.address %></p>
<div style="width: 100%; height: 100vh;"
      data-controller="direction"
      data-direction-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<div>
  <p><%#= link_to 'Get the directions to this parking spot', "https://www.google.com/maps?saddr=Current+Location&daddr=#{parking_bay.latitude.truncate(5)},#{parking_bay.longitude.truncate(5)}" %></p>
</div>

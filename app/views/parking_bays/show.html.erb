<div id="map" style="width: 100%; height: 100vh;"
      data-controller="direction"
      data-direction-parking-bay-value="<%= @parking_bay.to_json %>"
      data-direction-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div id="mapModalButton">
  <!-- Modal toggle -->
  <button data-modal-target="defaultModal" data-modal-toggle="defaultModal" class="block button" type="button">
    Show directions
  </button>
  <!-- Main modal -->
  <div id="defaultModal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] md:h-full">
    <div class="relative w-full h-full max-w-2xl md:h-auto">
      <!-- Modal content -->
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <!-- Modal header -->
        <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                Directions
            </h3>
            <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="defaultModal">
                <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                <span class="sr-only">Close modal</span>
            </button>
        </div>
        <!-- Modal body -->
        <div id="instructions" class="rounded p-4">
        </div>
        <!-- Modal footer -->
        <div class="p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
          <div id="instructions-redirectory" class="flex justify-between px-4 space-x-6">
            <p class='text-center'><%= link_to 'Go back', root_path, class: 'button-invert-color' %></p>
            <p class='text-center'><%= link_to 'Start journey', @parking_bay.directions_link, target:'_blank', class: 'button' %></p>
            <p class='text-center'><%= link_to 'Start Timer', new_parking_bay_trip_path(@parking_bay), class:'button-invert-color' %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
